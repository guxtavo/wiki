# status bar settings
set -g status-right-length 200
set-option -g status-position top
set -g base-index 1

# automatically set window titles
set-window-option -g automatic-rename on
set-option -g set-titles on

## Navigation
# use alt-arrow keys without prefix to select panels
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# use shift-arrow keys without prefix to switch windows
bind -n S-Left previous-window
bind -n S-Right next-window
# todo
#bind -n S-up previous-session
#bind -n S-Left previous-session

# paging up and putting into copy mode
bind -n S-Pageup copy-mode -u

# reload tmux config
bind r source-file ~/.tmux.conf

# split window
bind-key v split-window -h
bind-key h split-window -v

# set no delay for escape key press
set -sg escape-time 0

set-window-option -g mode-keys vi

# status bar script
# set -g status-right 
#	 '#(cd #{pane_current_path}; git rev-parse --abbrev-ref HEAD) 
#	  #(cd #{pane_current_path}; git status --porcelain | wc -l)
#	     |
#	   #(~/git/wiki/profile/status-right.sh) 
#	   %a %m-%d %H:%M'
#
set -g status-right '#(~/git/wiki/profile/status-right-openbsd.sh) %a %m-%d %H:%M'

# clipboard integration
# C-b-p to paste buffer from xclip:
bind C-p run-shell "tmux set-buffer \"$(xclip -o)\"; tmux paste-buffer"
