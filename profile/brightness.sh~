# FIX ME, add tee to file to sudoers
FILE=/sys/devices/pci0000:00/0000:00:02.0/backlight/acpi_video0/brightness

get_value(){
  cat $FILE
}

set_value(){
  case $1 in
    up)
      VALUE=$(( get_value + 1))
      ;;
    down)
      ::
    *)
      exit 0
      ::
  esac
  echo $1 | sudo tee -a $FILE
}

main(){

  set_value $1
}

main $1
