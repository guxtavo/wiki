#!/bin/bash

ping="ping -qn -c1 -W 1"
ROUTER=$(ip route show | grep default | awk '{print $3}')
VPN_RT="l3mule.suse.de"
#VPN_RT=$(ip --oneline a | grep tun0 | awk '{print $6}' | cut -f 1 -d /|grep [0-9])

if [ ! -z "$ROUTER" ]; then
    $ping $ROUTER > /dev/null
    ROUTER_EXIT="$?"
fi

if [ ! -z "$VPN_RT" ]; then
    $ping $VPN_RT > /dev/null
    VPN_ROUTER_EXIT="$?"
fi

echo $ROUTER_EXIT $VPN_ROUTER_EXIT
