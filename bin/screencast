#!/bin/bash

ARCH=$(uname -m)
PID=$(pidof ffmpeg)

stop_recording()
{
    if [ ! -z $PID ]; then
        kill -s SIGINT $PID
    fi

    rm /tmp/recording
    echo Stopping
}

start_recording_arm()
{
  touch /tmp/recording && ffmpeg -probesize 30M \
    -f x11grab -s 1920x1080 -r 1 -video_size 1024x576 \
    -thread_queue_size 64000 -draw_mouse 0 -i :0.0 \
    -vcodec theora -qscale:v 8 \
    -loglevel warning ~/screencast_$(date +%s).ogv &
}

start_recording()
{
  touch /tmp/recording
  date=$(date +%s)
  ffmpeg -probesize 30M -analyzeduration 10M \
    -f x11grab -threads 0 -s 1920x1080 -r 2 -video_size 1280x720 \
    -thread_queue_size 64000 -draw_mouse 0 -i :0.0 \
    -f alsa -ac 2  -thread_queue_size 32000 \
    -guess_layout_max 0 -i hw:0 \
    -acodec libvorbis -qscale:a 5 \
    -vcodec theora -qscale:v 8 \
    -loglevel info ~/screencast_$date.ogv > ~/s.log 2>&1 &
  echo mpv  ~/screencast_$date.ogv
}

main()
{
  if [ -f /tmp/recording ]; then
    stop_recording
  else
    if [ $ARCH = "armv6l" ] ; then
        start_recording_arm
    else
        start_recording
    fi
  fi
}

main
