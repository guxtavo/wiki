#!/bin/bash

sdi()
{
    # display profile
    #  - 42x174 chars (40 lines in vi)
    #  - 14"  display
    # new session
    SESSION="HELM"
    tmux new-session -d -s $SESSION

    # FLIGHT
    tmux rename-window -t $SESSION:1 'FLIGHT:' #'âœˆï¸ '

    # CAPCOM
    tmux new-window -t $SESSION:2 -n 'CAPCOM:' #'â›‘ï¸ '

    # FDO
    tmux new-window -t $SESSION:3 -n 'FDO:' #ğŸš€

    # GPO
    tmux new-window -t $SESSION:4 -n 'GPO:' #ğŸŒ'

    # DPS
    tmux new-window -t $SESSION:5 -n 'DPS:' #ğŸ¤–'

    # Surgeon
    tmux new-window -t $SESSION:6 -n 'Surgeon:' #âš•ï¸ '

    # Booster
    tmux new-window -t $SESSION:7 -n 'Booster:' # ğŸ”¼'

    # Payload
    tmux new-window -t $SESSION:8 -n 'PDRS:' # ğŸ“¦'

    # Finishing up
    tmux select-window -t $SESSION:1
    tmux attach-session -t $SESSION
}

sdi
